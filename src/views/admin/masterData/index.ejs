<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0 fw-bold"><%= title %></h2>
</div>

<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <a class="nav-link active" data-bs-toggle="tab" href="#kategori">
      Kategori
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-bs-toggle="tab" href="#supplier">
      Produk
    </a>
  </li>
</ul>


<div class="tab-content">
  <div id="kategori" class="tab-pane fade show active">
    <div class="container mt-4">
        <div class="d-flex align-items-center mb-3">
            <a href="/masterData/kategori/create" class="btn btn-primary">Tambah Kategori</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
        
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>No</th>
                    <th>Kategori</th>
                    <th>aksi</th>
                </tr>
            </thead>
            <tbody>
                <% kategori.forEach(k => { %>
                 <tr>
                    <td class="text-center"><%= k.id %></td>
                    <td class="text-center"><%= k.nama_kategori %></td>
                    <td class="text-center">
                        <a href="/masterData/kategori/edit/<%= k.id %>" class="btn btn-primary">Edit</a>
                        <a href="/masterData/kategori/delete/<%= k.id %>" class="btn btn-danger my-2" data-bs-toggle="modal" data-bs-target="#alertModal">Delete</a>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
            </div>
        </div>
    </div>
  </div>

  <div id="supplier" class="tab-pane fade show active">
    <div class="container mt-4">
        <div class="d-flex align-items-center mb-3">
            <a href="/masterData/supplier/create" class="btn btn-primary">Tambah Supplier</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
        
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>No</th>
                    <th>Supplier</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% supplier.forEach(k => { %>
                 <tr>
                    <td class="text-center"><%= k.id %></td>
                    <td class="text-center"><%= k.nama_supplier %></td>
                    <td class="text-center"><%= k.no_telp %></td>
                    <td class="text-center"><%= k.alamat %></td>
                    <td class="text-center">
                        <a href="/masterData/supplier/edit/<%= k.id %>" class="btn btn-primary">Edit</a>
                        <a href="/masterData/supplier/delete/<%= k.id %>" class="btn btn-danger my-2" data-bs-toggle="modal" data-bs-target="#alertModal">Delete</a>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
            </div>
        </div>
    </div>
  </div>
</div>
